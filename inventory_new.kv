WindowsManager
    FirstScreen
    InventoryScreen

<FirstScreen>
    name: 'first_screen'
    StackLayout:
        adaptive_height: True
        MDBoxLayout:
            orientation: 'horizontal'
            size_hint: 1, 0.1
            padding: [50, 10, 50, 10]
            spacing: 1
            md_bg_color: 'orange'
            MDIconButton
                id: icon_button_scan
                icon: 'close-circle-outline'
                user_font_size: 32
                pos_hint: {'center_x':.5, 'center_y':.5}
                theme_text_color: 'Custom'
                text_color: 'red'
            MDLabel:
                text: 'Сканер:'
            MDLabel:
                id: ip_label
                text: 'не найден'
        MDBoxLayout:
            orientation: 'vertical'
            size_hint: 1, 0.9
            padding: [200, 50, 200, 50]
            spacing: 10
            #adaptive_height: True
            #adaptive_width: True
            #adaptive_size: True
            md_bg_color: 'orange'

            MDRaisedButton:
                id: button_inv
                text: 'Инвентаризация'
                font_size: 20
                on_release: app.show_confirmation_dialog('inventory')
                pos_hint: {'center_x':.5, 'center_y':.5}

            MDRaisedButton:
                text: 'Отчеты'
                font_size: 20
                on_release: app.show_confirmation_dialog('report')
                pos_hint: {'center_x':.5, 'center_y':.5}


<InventoryScreen>

    name: 'inventory_screen'


